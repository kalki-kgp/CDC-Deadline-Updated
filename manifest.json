{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "CDC (CV) Deadline Status - IIT KGP",
  "version": "1.2.0",
  "description": "Track CV submission deadlines with color indicators, view applied companies, and fetch CGPA requirements.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "CDC Deadline Status",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://erp.iitkgp.ac.in/IIT_ERP3/showmenu.htm"
      ],
      "js": ["content.js"]
    }
  ]
}
